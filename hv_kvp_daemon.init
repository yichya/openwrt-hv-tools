#!/bin/sh /etc/rc.common

START=21

USE_PROCD=1
NAME=hv_kvp_daemon
PROG=/sbin/hv_kvp_daemon

start_service() {
        procd_open_instance
        procd_set_param command "$PROG" -n
        procd_set_param respawn
        procd_set_param stdout 1
        procd_set_param stderr 1
        procd_close_instance
}
